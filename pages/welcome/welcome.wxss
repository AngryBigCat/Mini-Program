/* pages/welcome/welcome.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.user-avatar {
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
}
.user-name {
    margin-top: 100rpx;
    font-size: 32rpx;
    font-weight: bold;
    letter-spacing: 2rpx;
}
.moto-container {
    margin-top: 200rpx;
    width: 220rpx;
    height: 80rpx;
    border: 1px solid #405f80;
    border-radius: 5rpx;
    text-align: center;
}
.moto {
    font-size: 22rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #405f80;
    letter-spacing: 2rpx;
}
page {
    height: 100%;
    background-color: #b3d4db;
}