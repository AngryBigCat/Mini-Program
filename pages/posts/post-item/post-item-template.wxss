.post-container {
    display: flex;
    flex-direction: column;
    margin-top: 20px;
    margin-bottom: 40px;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}
.post-author-date {
    margin: 10rpx 0 20rpx 10rpx;
}
.post-author {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post-date {
    margin-left: 20rpx;
    margin-bottom: 5px;
    vertical-align: middle;
    font-size: 26rpx;
}
.post-title {
    margin-left: 10px;
    margin-bottom: 10px;
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
}
.post-image {
    width: 100%;
    height: 340rpx;
    margin-bottom: 15px;
}
.post-content {
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}
.post-like {
    flex-direction: row;
    font-size: 13px;
    line-height: 16px;
    margin-left: 10px;
}
.post-like-image {
    height: 16px;
    width: 17px;
    margin-right: 8px;
    vertical-align: middle;
}
.post-like-font {
    vertical-align: middle;
    margin-right: 20px;
}