<!--pages/posts/post.wxml-->
<import src="post-item/post-item-template.wxml" />
<swiper indicator-dots="true" autoplay="true" interval="2000">
    <swiper-item>
        <image src="/images/posts/xiaolong.jpg"></image>
    </swiper-item>
    <swiper-item>
        <image src="/images/posts/vr.png"></image>
    </swiper-item>
    <swiper-item>
        <image src="/images/posts/crab.png"></image>
    </swiper-item>
</swiper>
<block wx:for="{{posts}}">
    <view catchtap="onPostTap" data-post-id="{{item.postId}}">
        <template is="postItem" data="{{...item}}" />
    </view>
</block>
